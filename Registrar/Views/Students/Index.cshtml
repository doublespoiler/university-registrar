@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId }) | @student.department.DepartmentName</li>
}
<p>@Html.ActionLink("Add new student", "Create")</p>
<p>@Html.ActionLink("View All Courses", "Index", "Courses")</p>